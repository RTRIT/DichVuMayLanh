<body>
    <!-- Header -->


    <div class="container">
        <div class="bill-management">
            <h3>Quản lý hoá đơn</h3>
            <div class="tab row">
                <div class="tab1 col-4">Tất cả đơn</div>
                <div class="tab2 col-1">Giá đơn</div>
